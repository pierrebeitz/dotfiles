alias dw="docker-compose exec web"
alias dc="docker-compose"
alias dce="docker-compose exec"
alias g="git"
alias gcd="git checkout develop"
alias gcm="git checkout master"
alias gdc="git diff --cached"
alias gdcs="git diff --cached --shortstat"
alias gds="git diff --shortstat"
alias hosts='sudo vim /etc/hosts'
alias p="cd ~/projects"
alias t="tmux -u -2"
alias e="emacsclient"
alias ssh="sshrc"

# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map="xargs -n1"


# pipe in stuff, select via fzf and cut the `$1`st element
function fcut() {
  local i="${1:-1}"
  fzf | cut -f$i -d' '
}

# gets a git-rev. e.g. git rebase -i `rev`
function rev() {
  git log --oneline | fcut
}

# fb - checkout git branch
fb() {
  git checkout $(git branch --all | grep -v HEAD | fcut 3 | sed 's/remotes\/origin\///')
}
