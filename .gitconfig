[user]
	email = "pb@naymspace.de"
	name = "Pierre Beitz"

[alias]
	aa = add -A
	c = commit -am
	s = status -s
	df = diff --color --color-words --abbrev
	pullff = pull --ff-only

  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
  head = !git r -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all

[color]
	ui = always
[color "branch"]
 	current = yellow reverse
 	local = yellow
 	remote = green
[color "diff"]
 	meta = yellow bold
 	frag = magenta bold
 	old = red bold
 	new = green bold
[color "status"]
 	added = yellow
 	changed = green
 	untracked = cyan

[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[merge]
	log = true

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"

# Any GitHub repo with my username should be checked out r/w by default
# http://rentzsch.tumblr.com/post/564806957/public-but-hackable-git-submodules
[url "git@github.com:pierrebeitz/"]
	insteadOf = "git://github.com/pierrebeitz/"

[push]
	default = simple
