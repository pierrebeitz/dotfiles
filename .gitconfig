[alias]
  a = add -u
  aa = add --all :/
  ap = add -u -p
  b = browse
	bdm = "!git branch --merged | grep -v '*' | xargs -n 1 git branch -d"
  c = commit -v
  df = diff --color --color-words --abbrev
  h = !git head
  head = !git r -1
  hp = "!. ~/.githelpers && show_git_head"
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
	me = !git l --all --author='Pierre' --date-order
	nuke = !sh -c 'git branch -d $1 && git push origin :$1' -
	pf = push --force-with-lease
  pullff = pull --ff-only
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
	rank = shortlog -sn --no-merges
  s = status -s -b

[color]
	ui = always

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
	pager = less -x1,5
	whitespace = trailing-space,space-before-tab
  editor = vim -f
  safecrlf = true
  excludesfile = ~/.global_gitignore
  ignorecase = false
  autocrlf = input

[github]
  user = pierrebeitz

[merge]
  log = true
	tool = meld

[push]
	default = current

[user]
  name = "Pierre Beitz"
  email = "pb@naymspace.de"

[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true

[advice]
	statusHints = true

[diff]
	renames = copies
[branch]
	autosetupmerge = true
[rerere]
	enabled = true
[fetch]
	prune = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
